<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="#454545"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/ivStockType"
        android:layout_width="0dp"
        android:layout_height="@dimen/stockImage"
        android:layout_weight="2"
        android:src="@drawable/euro"/>

    <TextView
        android:id="@+id/tvFromWhat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/stockTextSize"
        android:layout_marginTop="@dimen/stockItemMarginTop"
        android:text="@string/stockTemp"/>

    <TextView
        android:id="@+id/tvBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/stockItemMarginTop"
        android:textSize="@dimen/stockTextSize"
        android:text="@string/stockTemp"/>

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="@dimen/stockTextSize"
        android:layout_marginTop="@dimen/stockItemMarginTop"
        android:text="@string/stockTemp"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="@dimen/stockTextSize"
        android:layout_marginTop="@dimen/stockItemMarginTop"
        android:text="@string/stockTemp"/>

</LinearLayout>